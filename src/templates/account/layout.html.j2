<!DOCTYPE html>
<html>  
    <head>    
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Trivial Security{% if page_title %} - {{ page_title }}{% endif %}</title>
        <link rel= "stylesheet" type= "text/css" href= "{{ url_for('static',filename='styles/vendor/icofont.min.css')|autoversion }}" />
        <link rel= "stylesheet" type= "text/css" href= "{{ url_for('static',filename='styles/vendor/choices.9.0.1.min.css') }}" />
        <link rel= "stylesheet" type= "text/css" href= "{{ url_for('static',filename='styles/account/main.css')|autoversion }}" />
        <link rel= "stylesheet" type= "text/css" href= "{{ url_for('static',filename='styles/account/tables.css')|autoversion }}" />
        <link rel= "stylesheet" type= "text/css" href= "{{ url_for('static',filename='styles/account/scaffolding.css')|autoversion }}" />
        <script type=text/javascript>
            window.recaptcha_site_key = '{{ recaptcha_site_key }}'
            window.app = {
                page: '{{ page }}',
                domain: {
                    name: '{{ host_domain }}',
                    scheme: '{{ host_scheme }}',
                },
                websocket: {
                    domain: '{{ socket_domain }}',
                    scheme: '{{ socket_scheme }}',
                }{% if account %},
                account: {
                    id: '{{ account.account_id }}',
                    email: '{{ account.email }}',
                },
                api: {
                    domain: '{{ api_domain }}',
                    scheme: '{{ api_scheme }}',
                    key: '{{ account.apikey.api_key }}'
                },
                stripe_publishable_key: '{{ stripe_publishable_key }}'{% endif %}
            }
        </script>
        {% if page == 'setup' %}
        <script type=text/javascript src="https://js.stripe.com/v3"></script>
        {% endif  %}
        <script type=text/javascript src="{{url_for('static', filename='js/vendor/timeago.min.js')|autoversion }}"></script>
        <script type=text/javascript src="{{url_for('static', filename='js/site.js')|autoversion }}"></script>
        <link rel="apple-touch-icon" sizes="180x180" href="{{ url_for('static',filename='images/apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ url_for('static',filename='images/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ url_for('static',filename='images/favicon-16x16.png') }}">
        <link rel="manifest" href="{{ url_for('static',filename='site.webmanifest')|autoversion }}">
        <link rel="mask-icon" href="{{ url_for('static',filename='images/safari-pinned-tab.svg') }}" color="#5bbad5">
        <link rel="shortcut icon" href="{{ url_for('static',filename='favicon.ico') }}">
        <meta name="msapplication-TileColor" content="#494949">
        <meta name="msapplication-config" content="{{ url_for('static',filename='browserconfig.xml') }}">
        <meta name="theme-color" content="#1ABB9C">
    </head>  
    <body class="sidenav-closed">
    {% include 'account/navbar.html.j2' %}
    <div class="container">
        <div id="app-messages">
            {% if error %}
            <div class="alert alert-error"><i class="icofont-error"></i> {{ error }}</div>
            {% endif %}
            {% if success %}
            <div class="alert alert-success"><i class="icofont-tick-mark"></i> {{ success }}</div>
            {% endif %}
            {% if info %}
            <div class="alert alert-info"><i class="icofont-info-circle"></i> {{ info }}</div>
            {% endif %}
            {% if warning %}
            <div class="alert alert-warning"><i class="icofont-warning"></i> {{ warning }}</div>
            {% endif %}
        </div>
        {% block body %}{% endblock %}
        {% if account.is_authenticated %}
        <input name="socketio_token" type="hidden" value="{{ account.account.socket_key }}"/>
        <script type=text/javascript src="{{url_for('static', filename='js/vendor/socket.io.2.3.0.min.js') }}"></script>
        <script type=text/javascript src="{{url_for('static', filename='js/vendor/choices.9.0.1.min.js') }}"></script>
        <script type=text/javascript src="{{url_for('static', filename='js/vendor/ejs.3.0.2.min.js') }}"></script>
        <script type=text/javascript src="{{url_for('static', filename='js/vendor/forge.0.10.0.min.js') }}"></script>
        {% endif %}
    </div>
    </body>
</html>