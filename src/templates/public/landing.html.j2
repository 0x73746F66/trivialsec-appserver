{% extends 'public/layout.html.j2' %} 
{% block body %}
    <link rel= "stylesheet" type= "text/css" href= "{{ url_for('static',filename='styles/public/landing.css')|autoversion }}">

    <div id="banner-images">
        <img src="https://s3.dualstack.ap-southeast-2.amazonaws.com/{{ public_bucket }}/{{ public_object_prefix }}mock1.png"/>
        <img src="https://s3.dualstack.ap-southeast-2.amazonaws.com/{{ public_bucket }}/{{ public_object_prefix }}mock4.png"/>
    </div>

    <div class="subscribe" data-slug="{{ slug }}">
        <div class="message">
        <p>
            <b>Trivial Security</b> is nearing launch!
        </p>
        <p>
            At <b>Trivial Security</b> we track bad actor tools, techniques, and practices so we can monitor your threat surface for you.
        </p>
        <p>
            Reserve an exclusive invitation, this will put you in our priority list for exclusive access to Trivial Security.
        </p>
        </div>
        <div class="subscribe-form">
            <div id="app-messages">{% if error %}
                <div class="alert alert-error"><i class="icofont-error"></i> {{ error }}</div>
                {% endif %}{% if success %}
                <div class="alert alert-success"><i class="icofont-tick-mark"></i> {{ success }}</div>
                {% endif %}{% if info %}
                <div class="alert alert-info"><i class="icofont-info-circle"></i> {{ info }}</div>
                {% endif %}{% if warning %}
                <div class="alert alert-warning"><i class="icofont-warning"></i> {{ warning }}</div>
{% endif %}</div>
            <form id="subscribe_form" action="/api/subscribe" method="POST">
                <div class="email-elem">
                    <input id="email" type="email" required name="email" placeholder="you@example.com"/>
                </div>
                <div class="form-submit">
                    <button type="submit">Subscribe</button>
                </div>
            </form>
        </div>
    </div>
    <div class="footer">
        Copyright Â© {{ year }} Trivial Security | <a href="/privacy">Privacy Policy</a>
    </div>
    <input type="hidden" name="recaptcha_token" id="recaptcha_token" />
    <script src="https://www.google.com/recaptcha/api.js?render={{ recaptcha_site_key }}"></script>
    <script type=text/javascript src="{{url_for('static', filename='js/public/landing.js')|autoversion }}"></script>
{% endblock %}